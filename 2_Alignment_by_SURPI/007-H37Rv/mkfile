< config.mk
# Load global variables

# snap fails if more than one snap process is active
NPROC=1

#Convert bam into sam format
data/%.sam:	data/%.bam
	set -x
	mkdir -p `dirname $target`
	samtools view $prereq > $target'.build' \
	&& mv $target'.build' $target

#Align Single End reads
results/%.unpaired.bam:        data/%.unpaired.sam
	set -x
	mkdir -p `dirname $target`
	RG=`bin/get_rg $prereq`
	echo $RG
	snap-aligner \
		single \
		$SNAP_REFERENCEDIR \
		-R $RG \
		$prereq \
		$SNAP_OPTS \
		-o $target'.build.bam' \
	&& mv $target'.build.bam' $target \
	&& rm $prereq

#Align Pair End reads
results/%.paired.bam:        data/%.paired.sam
	set -x
	mkdir -p `dirname $target`
	RG=`bin/get_rg $prereq`
        echo $RG
	snap-aligner \
		paired \
		$SNAP_REFERENCEDIR \
		-R $RG \
		$prereq \
		$SNAP_OPTS \
		-o $target'.build.bam' \
	&& mv $target'.build.bam' $target \
	&& rm $prereq

# Clean up generated files
#
clean:V:
	bin/targets | xargs rm -f
