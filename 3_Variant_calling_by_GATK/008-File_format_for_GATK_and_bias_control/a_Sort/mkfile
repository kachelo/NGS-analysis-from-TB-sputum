# Sort BAM files
# ==============
#
results/%.bam:	data/%.bam
	set -x
	mkdir -p "$(dirname "$target")"
	BAM="results/${stem}.build.bam"
	bin/sambamba_v0.6.6 \
		sort \
		"$prereq" \
		-o "$BAM" \
	&& {
		mv "${BAM}" "$target"
		mv "${BAM}.bai" "${target}.bai"
	}


# Clean up generated files
# ========================
#
clean:V:
	bin/targets | xargs rm -f
