#!/bin/bash

# Find all files in the form:
#
# ```
# SAMPLE_LIBRARY_TREATMENT_PLATFORM_CENTER_L00[0-8]_[un]paired.bam
# ```
#
# Library contains two parts: PANEL-WORKTABLE
#
# This pipe preserves only `SAMPLE_PANEL` for downstream analysis.

find -L data \
	-type f \
	-name '*.bam' \
| sed -r \
	-e 's#^data/#results/#' \
	-e 's#_L([0-9])*\.(un)?paired##' \
| sort -u
